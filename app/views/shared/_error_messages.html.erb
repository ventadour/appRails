<% if @user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(object.errors.count, "erreur") %>
	<%= object.class.to_s.underscore.humanize.downcase %> ont empeche d'enregistrer votre inscription</h2>
	<p>
		Merci de corriger ces champs :
	</p>
	<ul>
		<% object.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>