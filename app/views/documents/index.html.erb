
<div id= "option">
	
	    <ul class="optionMenu">
        <li class="item1"><a href="#">Documents</a>
            <ul>
                <li class="subitem1"><%=link_to "Nouveau", new_document_path%></li>
            </ul>
        </li>
    </ul>
	
</div>	

<div id = "vue">
<h1><%= logoDoc %> Liste des documents</h1>
<hr>
<%= link_to icoNew, new_document_path %>
<%if @documents.length == 0 %>

<p>
	Aucun document disponnible
</p>

<%else%>

<%= will_paginate %>

<table class = "table">
	<tr>
		<th>Titre</th>
		<th>Contenu</th>
		<!-- <th>User</th> -->
		<th>creation</th>
		<th>Mise a jour</th>
		<th>Options</th>
	</tr>

	<% @documents.each do |document| %>
	<tr>
		<td><%= document.titre %></td>
		<td><%= contentPreview(document.content) %></td>
		<td><%= document.created_at.strftime("%d/%m/%y %H:%M") %></td>
		<td><%= document.updated_at.strftime("%d/%m/%y %H:%M") %></td>
		<!-- <td><%= document.user_id %></td>-->
		<td><%= link_to icoShow, document %>/
		<%= link_to icoEdit , edit_document_path(document) %>/
		<%= link_to icoSupp, document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>
<%= will_paginate %>
<%end%>
<hr>
</div>

